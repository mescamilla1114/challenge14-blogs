<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary">Comment on this</button>
  </p>
  <form class="form new-comment-form" data-id="{{id}}">
      <div class="form-group">
        <label for="comment-name">Comment title:</label>
        <input class="form-input" type="text" id="comment-name" name="comment-name" />
      </div>
      <div class="form-group">
        <label for="comment-desc">description:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary comment-list">Comment</button>
      </div>
    </form>
  </div>


 {{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
   <p>
      {{comment.name}}
    </p>
    <p>
      {{comment.description}}
    </p>
  </div>
</div>
{{/each}} 
</div>
<script src="/js/blog.js"></script>
